{
  "name": "muggle-config",
  "version": "1.0.2",
  "description": "Configuration without the magic.",
  "main": "dist/index.js",
  "author": "me",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/robations/muggle-config.git"
  },
  "bugs": {
    "url": "https://github.com/robations/muggle-config/issues"
  },
  "dependencies": {
    "js-yaml": "^3.7.0",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@types/ini": "^1.3.29",
    "@types/jest": "^25.1.4",
    "@types/js-yaml": "^3.5.29",
    "@types/node": "^6.0.52",
    "@types/ramda": "^0.26.44",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.12.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.4"
  },
  "scripts": {
    "build": "yarn tsc",
    "in-rebase": "(! test -d '$(git rev-parse --git-path rebase-merge)' && ! test -d '$(git rev-parse --git-path rebase-apply)')",
    "lint": "yarn tsc --noEmit",
    "prepublish": "yarn build",
    "test": "yarn lint && yarn jest"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "types": "./dist/index.d.ts",
  "jest": {
    "testRegex": "/src/.*\\.(test|spec)\\.[jt]sx?$",
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint ; (yarn in-rebase && lint-staged)",
      "pre-push": "CI=1 yarn test"
    }
  },
  "resolutions": {
    "acorn-globals/acorn": "^6.4.1"
  },
  "sideEffects": false
}
