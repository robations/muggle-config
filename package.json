{
  "name": "muggle-config",
  "version": "1.0.2",
  "description": "Configuration without the magic.",
  "main": "dist/index.js",
  "author": "me",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/robations/muggle-config.git"
  },
  "bugs": {
    "url": "https://github.com/robations/muggle-config/issues"
  },
  "dependencies": {
    "js-yaml": "^3.7.0",
    "ramda": "^0.25"
  },
  "devDependencies": {
    "@types/ini": "^1.3.29",
    "@types/jest": "^24.0.13",
    "@types/js-yaml": "^3.5.29",
    "@types/node": "^6.0.52",
    "@types/ramda": "types/npm-ramda#dist",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "lint-staged": "^7.1.2",
    "prettier": "^1.12.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4"
  },
  "scripts": {
    "build": "yarn tsc",
    "in-rebase": "(! test -d '$(git rev-parse --git-path rebase-merge)' && ! test -d '$(git rev-parse --git-path rebase-apply)')",
    "lint": "yarn tsc --noEmit",
    "prepublish": "yarn build",
    "precommit": "yarn lint ; (yarn in-rebase && lint-staged)",
    "prepush": "CI=1 yarn test",
    "test": "yarn lint && yarn jest"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "types": "./dist/index.d.ts",
  "jest": {
    "testRegex": "/src/.*\\.(test|spec)\\.[jt]sx?$",
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  }
}
