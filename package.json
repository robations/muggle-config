{
  "name": "muggle-config",
  "version": "1.1.2",
  "description": "Configuration without the magic.",
  "main": "dist/index.js",
  "author": "me",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/robations/muggle-config.git"
  },
  "bugs": {
    "url": "https://github.com/robations/muggle-config/issues"
  },
  "dependencies": {
    "js-yaml": "^3.7.0",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@types/ini": "^1.3.29",
    "@types/jest": "^26.0.22",
    "@types/js-yaml": "^3.5.29",
    "@types/node": "^10",
    "@types/ramda": "^0.27.39",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.0.8",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "build": "yarn tsc",
    "in-rebase": "(! test -d '$(git rev-parse --git-path rebase-merge)' && ! test -d '$(git rev-parse --git-path rebase-apply)')",
    "lint": "yarn tsc --noEmit",
    "prepublishOnly": "yarn build",
    "test": "yarn lint && yarn jest",
    "test-no-lint": "yarn jest"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "types": "./dist/index.d.ts",
  "jest": {
    "testRegex": "/src/.*\\.(test|spec)\\.[jt]sx?$",
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint ; (yarn in-rebase && lint-staged)",
      "pre-push": "CI=1 yarn test"
    }
  },
  "sideEffects": false
}
